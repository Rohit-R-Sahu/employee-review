<div class="d-flex justify-content-center p-4 p-md-0" style="height: 90vh">
  <form
    class="rounded p-3 col-12 col-md-4 my-4 shadow-lg"
    style="height: 70vh; width: 50%; background-color: rgb(170, 204, 231)"
    method="POST"
    action="/create-session"
  >
    <h3 class="mb-4 text-center" style="font: 3rem sans-serif">SIGN IN</h3>
    <!-- Email input -->
    <div class="form-outline mb-3">
      <label class="form-label" for="email" style="font: 2rem sans-serif"
        >Email address</label
      >
      <input
        type="email"
        id="email"
        name="email"
        class="form-control"
        placeholder="example@example.com"
        style="font-size: 1.5rem"
      />
    </div>

    <!-- Password input -->
    <div class="form-outline mb-3">
      <label class="form-label" for="password" style="font: 2rem sans-serif"
        >Password</label
      >
      <input
        type="password"
        id="password"
        name="password"
        class="form-control"
        style="font-size: 1.5rem"
      />
    </div>

    <div>
      <!-- Login button -->
      <button
        type="submit"
        class="btn btn-primary btn-block fw-semibold"
        style="width: 100%; font-size: 1.5rem"
      >
        LOGIN
      </button>
    </div>
    <div>
      <hr />
    </div>

    <!-- Link to redirect to signup page -->
    <div class="text-center">
      <p style="font-size: 1.2rem">
        Don't Have an Account ?
        <a href="/sign-up">Click Here To Register</a>
      </p>
    </div>
  </form>
</div>
